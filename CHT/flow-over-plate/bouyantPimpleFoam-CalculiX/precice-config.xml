<?xml version="1.0"?>

<precice-configuration>

    <log>
        <sink filter="%Severity% > debug and %Rank% = 0" format="---[precice] %ColorizedSeverity% %Message%" enabled="true"/>
        <sink type="file" output="debug_Fluid.log" filter="%Participant% = Fluid" />
        <sink type="file" output="debug_Solid.log" filter="%Participant% = CalculiX" />
    </log>

    <solver-interface dimensions="3">

    <data:scalar name="Temperature"/>
    <data:scalar name="Heat-Flux"/>

    <mesh name="OpenFOAM-Mesh">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <mesh name="Solid">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <participant name="Fluid">
        <use-mesh name="OpenFOAM-Mesh" provide="yes"/>
        <use-mesh name="Solid" from="CalculiX"/>
        <read-data name="Heat-Flux" mesh="OpenFOAM-Mesh"/>
        <write-data name="Temperature" mesh="OpenFOAM-Mesh"/>
        <mapping:nearest-neighbor direction="read" from="Solid" to="OpenFOAM-Mesh" constraint="consistent" timing="initial"/>
    </participant>

    <participant name="CalculiX">
        <use-mesh name="OpenFOAM-Mesh" from="Fluid"/>
        <use-mesh name="Solid" provide="yes"/>
        <read-data name="Temperature" mesh="Solid"/>
        <write-data name="Heat-Flux" mesh="Solid"/>
        <mapping:nearest-neighbor direction="read" from="OpenFOAM-Mesh" to="Solid" constraint="consistent" timing="initial"/>
    </participant>

    <m2n:sockets from="CalculiX" to="Fluid"/>

    <coupling-scheme:serial-implicit>
        <time-window-size value="0.01"/>
        <max-time value="1"/>
        <max-iterations value="200"/>
        <participants first="Fluid" second="CalculiX"/>
        <exchange data="Temperature" mesh="OpenFOAM-Mesh" from="Fluid" to="CalculiX"/>
        <exchange data="Heat-Flux" mesh="Solid" from="CalculiX" to="Fluid"/>
        <relative-convergence-measure limit="1.0e-6" data="Temperature" mesh="OpenFOAM-Mesh"/>
        <extrapolation-order value="2"/>
        <acceleration:IQN-ILS>
            <data mesh="Solid" name="Heat-Flux" />
            <initial-relaxation value="0.01" />
            <max-used-iterations value="80" />
            <time-windows-reused value="10" />
            <filter type="QR1" limit="1e-8" />
        </acceleration:IQN-ILS>
    </coupling-scheme:serial-implicit>

    </solver-interface>

</precice-configuration>
