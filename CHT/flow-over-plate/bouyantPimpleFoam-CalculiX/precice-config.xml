<?xml version="1.0"?>

<precice-configuration>

    <log>
        <sink filter="%Severity% > debug and %Rank% = 0" format="---[precice] %ColorizedSeverity% %Message%" enabled="true"/>
        <sink type="file" output="debug_OpenFOAM.log" filter="%Participant% = OpenFOAM" />
        <sink type="file" output="debug_Calculix_Mesh.log" filter="%Participant% = Calculix" />
    </log>

    <solver-interface dimensions="3">

    <data:scalar name="Temperature"/>
    <data:scalar name="Heat-Flux"/>

    <mesh name="OpenFOAM-Mesh">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <mesh name="Calculix_Mesh">
        <use-data name="Temperature"/>
        <use-data name="Heat-Flux"/>
    </mesh>

    <participant name="OpenFOAM">
        <use-mesh name="OpenFOAM-Mesh" provide="yes"/>
        <use-mesh name="Calculix_Mesh" from="Calculix"/>
        <read-data name="Heat-Flux" mesh="OpenFOAM-Mesh"/>
        <write-data name="Temperature" mesh="OpenFOAM-Mesh"/>
        <mapping:nearest-neighbor direction="read" from="Calculix_Mesh" to="OpenFOAM-Mesh" constraint="consistent" timing="initial"/>
    </participant>

    <participant name="Calculix">
        <use-mesh name="OpenFOAM-Mesh" from="OpenFOAM"/>
        <use-mesh name="Calculix_Mesh" provide="yes"/>
        <read-data name="Temperature" mesh="Calculix_Mesh"/>
        <write-data name="Heat-Flux" mesh="Calculix_Mesh"/>
        <mapping:nearest-neighbor direction="read" from="OpenFOAM-Mesh" to="Calculix_Mesh" constraint="consistent" timing="initial"/>
    </participant>

    <m2n:sockets from="Calculix" to="OpenFOAM"/>

    <coupling-scheme:serial-implicit>
        <time-window-size value="0.01"/>
        <max-time value="1"/>
        <max-iterations value="200"/>
        <participants first="OpenFOAM" second="Calculix"/>
        <exchange data="Temperature" mesh="OpenFOAM-Mesh" from="OpenFOAM" to="Calculix"/>
        <exchange data="Heat-Flux" mesh="Calculix_Mesh" from="Calculix" to="OpenFOAM"/>
        <relative-convergence-measure limit="1.0e-6" data="Temperature" mesh="OpenFOAM-Mesh"/>
        <extrapolation-order value="2"/>
        <acceleration:IQN-ILS>
            <data mesh="Calculix_Mesh" name="Heat-Flux" />
            <initial-relaxation value="0.01" />
            <max-used-iterations value="80" />
            <time-windows-reused value="10" />
            <filter type="QR1" limit="1e-8" />
        </acceleration:IQN-ILS>
    </coupling-scheme:serial-implicit>

    </solver-interface>

</precice-configuration>
